!!!
%html{lang: "en"}
  %head
    %title
      CoderTicket

  %body
    - flash.each do |name, msg|
      %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
        .container
          = msg

  %section.header-11-sub
    .background &nbsp;
    .container
      .row
        .col-sm-6
          %h3
            Login to CoderTicket or
            = link_to 'Register', new_user_path
            !
          .signup-form
            = form_tag sessions_path, method: 'post' do
              = label_tag :email
              = text_field_tag :email, nil, placeholder: 'Email'
              = label_tag :password
              = password_field_tag :password, nil, placeholder: 'Password'

              .form-group
              = submit_tag 'Login', class: 'btn btn-block btn-info'

  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

:css
  body { 
  background: url('http://res.cloudinary.com/nara/image/upload/v1458308288/laptopgirl_gj3axq.jpg') no-repeat center center fixed; 
   -webkit-background-size: cover;
   -moz-background-size: cover;
   -o-background-size: cover;
   background-size: cover;
  }